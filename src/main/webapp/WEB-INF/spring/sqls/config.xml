<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd" >
<configuration>

	<!-- null 값 설정 -->
	<settings>
		<setting name="jdbcTypeForNull" value="NULL" />
	</settings>
	
	<typeAliases>
		<typeAlias type="com.spring.bookduck.model.dto.MemberDto" alias="Ldto"/>
		<typeAlias type="com.spring.bookduck.classify.dto.AireDto" alias="AireDto"/>
		<typeAlias type="com.spring.bookduck.classify.dto.BlistDto" alias="BlistDto"/>
